{
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "parser": "typescript",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": ".json",
            "options": {
                "parser": "json",
                "useTabs": true,
                "trailingComma": "none"
            }
        },
        {
            "files": ".md",
            "options": {
                "parser": "markdown",
                "proseWrap": "never"
            }
        },
        {
            "files": "*.yml",
            "options": {
                "parser": "yaml"
            }
        }
    ]
}
